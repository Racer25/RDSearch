<!DOCTYPE html>
<html>

    <head>
        <!-- Head generic Content -->
        <% include ../partials/headContent %>

        <style>
            body,h1 {font-family: "Raleway", sans-serif}
            body, html {height: 100%}
            .bgimg {
                background-image: url('/static/imgs/fond.jpg');
                min-height: 100%;
                background-position: center;
                background-size: cover;
            }
        </style>

        <!-- My AJAX -->
        <script src="/static/js/ajax/ajaxHome.js"></script>

        <!-- My DOM scripts -->
        <script src="/static/js/dom/domHome.js"></script>
        <script src="/static/js/tool/levenshtein.js"></script>

    </head>
    <body>

        <div class="bgimg w3-display-container w3-animate-opacity w3-text-black">
            <div class="w3-display-topleft w3-padding-large w3-xlarge">
                Logo
            </div>

            <div class="w3-row-padding">
                <div class="w3-col s9">
                    <div class="w3-container" style="width:80%;margin:auto;">
                        <h1 class="w3-jumbo w3-animate-top w3-center" style="text-shadow:1px 1px 0 white, -1px 1px 0 white, 1px -1px 0 white, -1px -1px 0 white">RARE DISEASE SEARCH</h1>
                        <hr class="w3-border-grey" style="margin:auto;width:40%">
                        <br/>
                        <div class="w3-center w3-twothird">
                            <input class="w3-input w3-border" id="search" name="search" type="text" placeholder="Type here a rare disease name" autocomplete="off" autofocus  />
                            <div class="w3-dropdown-content w3-bar-block w3-border w3-white" style="position:absolute;width:66.6%" id="suggestions">
                            </div>
                        </div>

                        <!-- Bug float left with chrome (w3-quarter) -->
                        <button class="w3-btn w3-ripple w3-red w3-margin-left w3-disabled" id="searchButton" type="button" style="width:24.99%">Search</button>

                    </div>
                </div>
                <div class="w3-white w3-padding-16 w3-col s3">
                    <div>
                        <div class="w3-container" style="vertical-align: middle">
                            <h3 class="w3-twothird">Most studied diseases of </h3>
                            <select class="w3-select w3-third" name="selectDate" id="selectDate"
                            onchange="if(this.selectedIndex != undefined){}">
                                <%for(var i = 0; i<years.length; i++){%>
                                <option value="<%=years[i]%>"><%=years[i]%></option>
                                <%}%>
                            </select>
                        </div>
                        <ul class="w3-ul w3-border" id="topDiseasesList">
                            <%for(var i = 0; i<rareDiseases.length; i++){%>
                            <li class="w3-hover-blue" style="cursor:pointer" onclick="window.open('/disease/<%=rareDiseases[i].orphanetID%>', '_self')">
                                <p><b><%=rareDiseases[i].name%></b> (<b><%=rareDisease_Years[i].numberOfPublications%></b> publications)</p>
                            </li>
                            <%}%>
                            <li class="w3-hover-blue" style="cursor:pointer"><b>...</b></li>
                        </ul>
                    </div>
                    <div>

                    </div>
                </div>
            </div>

            <div class="w3-display-bottomleft w3-padding-large">
                Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank">w3.css</a>
            </div>
        </div>

    </body>
</html>